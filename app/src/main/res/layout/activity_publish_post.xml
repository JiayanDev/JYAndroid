<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_light_gray_color">

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|top"
                android:lineSpacingExtra="5dip"
                android:maxHeight="120dip"
                android:minHeight="100dip"
                android:padding="@dimen/normal_padding"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/edit_content"
                android:layout_alignRight="@id/edit_content"
                android:padding="10dip"
                android:text="345"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="@dimen/normal_margin" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginTop="@dimen/normal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_item_hint_style"
                android:drawableLeft="@mipmap/icon_tag"
                android:text="@string/category" />

            <TextView
                android:id="@+id/txt_category"
                style="@style/text_item_content_style" />
        </LinearLayout>

        <View style="@style/divider_gray_style" />

    </LinearLayout>

</ScrollView>