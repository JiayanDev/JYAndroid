<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dip">

        <RelativeLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingLeft="20dip"
            android:paddingRight="15dip"
            android:paddingTop="@dimen/normal_padding">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_avatar"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:riv_corner_radius="40dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nickname"
                    style="@style/text_item_style"
                    android:text="七月" />

                <TextView
                    android:id="@+id/txt_info"
                    style="@style/text_item_hint_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="广东深圳 | 25"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_right_normal" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_home_page"
            style="@style/divider_big_gray_style" />

        <TextView
            android:id="@+id/txt_home_page"
            style="@style/text_item_right_arrow_style"
            android:text="我的主页"
            />

        <View style="@style/divider_big_gray_style" />

        <TextView
            android:id="@+id/txt_notification"
            style="@style/text_item_right_arrow_style"
            android:text="我的通知" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/txt_comment"
            style="@style/text_item_right_arrow_style"
            android:text="我的评论" />

        <View style="@style/divider_big_gray_style" />

        <TextView
            android:id="@+id/txt_mime"
            style="@style/text_item_right_arrow_style"
            android:text="我的伴美" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/txt_events"
            style="@style/text_item_right_arrow_style"
            android:text="成为美丽天使" />

        <View style="@style/divider_big_gray_style" />

        <TextView
            android:id="@+id/txt_setting"
            style="@style/text_item_right_arrow_style"
            android:text="设置"
            />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/txt_help"
            style="@style/text_item_right_arrow_style"
            android:text="帮助" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/txt_logout"
            style="@style/text_item_right_arrow_style"
            android:text="退出" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/txt_delete"
            style="@style/text_item_right_arrow_style"
            android:text="删除用户" />

        <View
            style="@style/divider_gray_style"
            android:layout_marginLeft="10dip" />

    </LinearLayout>
</ScrollView>