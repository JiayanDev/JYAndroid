<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_gray_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dip">

        <TextView
            android:id="@+id/txt_password"
            style="@style/text_item_right_arrow_style"
            android:background="@android:color/white"
            android:onClick="onClick"
            android:text="修改密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_help"
                style="@style/text_item_right_arrow_style"
                android:onClick="onClick"
                android:text="使用帮助" />

            <View style="@style/divider_offset_gray_style" />

            <TextView
                android:id="@+id/txt_about"
                style="@style/text_item_right_arrow_style"
                android:onClick="onClick"
                android:text="关于我们" />

            <View style="@style/divider_offset_gray_style" />

            <TextView
                android:id="@+id/txt_feedback"
                style="@style/text_item_right_arrow_style"
                android:onClick="onClick"
                android:text="意见反馈" />

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_width="wrap_content"
                    android:text="客服电话" />

                <TextView
                    android:id="@+id/txt_service_phone"
                    style="@style/text_item_right_arrow_style"
                    android:gravity="right"
                    android:text="400 12345678"
                    android:textColor="@color/theme_color" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_exit"
            style="@style/btn_theme"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="@string/exit" />

    </LinearLayout>
</ScrollView>