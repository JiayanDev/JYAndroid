<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dip"
        android:src="@mipmap/icon_logo" />

    <TextView
        style="@style/text_normal_style"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="V 1.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/text_drawable_left_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/normal_margin"
            android:background="@drawable/bg_round_frame_theme"
            android:drawableLeft="@mipmap/icon_event_location_gray"
            android:gravity="center_horizontal"
            android:padding="8dip"
            android:text="12345678"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small_text_size" />

        <TextView
            style="@style/text_drawable_left_style"
            android:layout_width="match_parent"
            android:background="@drawable/bg_round_frame_theme"
            android:drawableLeft="@mipmap/icon_event_location_gray"
            android:gravity="center_horizontal"
            android:padding="8dip"
            android:text="0755-2345678"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_bottom"
        style="@style/text_normal_style"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:textColor="@color/text_hint_color"
        android:text="@string/all_right_reserved"
        android:textSize="@dimen/small_text_size" />

</RelativeLayout>