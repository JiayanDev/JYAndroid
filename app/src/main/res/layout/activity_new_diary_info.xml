<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dip">

        <LinearLayout
            android:id="@+id/layout_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="30dip"
            android:paddingTop="30dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <TextView
                    style="@style/text_hint_style"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/project"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/txt_project"
                    style="@style/text_item_content_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:background="?attr/editTextBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <TextView
                    style="@style/text_hint_style"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/time"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/txt_time"
                    style="@style/text_item_right_arrow_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:background="?attr/editTextBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <TextView
                    style="@style/text_hint_style"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/doctor"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/txt_doctor"
                    style="@style/text_item_right_arrow_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:background="?attr/editTextBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <TextView
                    style="@style/text_hint_style"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/hospital"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/txt_hospital"
                    style="@style/text_item_right_arrow_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:background="?attr/editTextBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/normal_padding"
                android:paddingRight="@dimen/normal_padding">

                <TextView
                    style="@style/text_hint_style"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/hospital"
                    android:textColor="@color/theme_color" />

                <EditText
                    android:id="@+id/edit_price"
                    style="@style/text_item_style"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="12000" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="40dip"
            android:paddingTop="20dip">

            <TextView
                android:id="@+id/txt_satisfy_hint"
                style="@style/text_item_style"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/satisfy_level"
                android:textSize="@dimen/title_text_size" />

            <com.jiayantech.jyandroid.widget.RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="215dip"
                android:layout_height="30dip"
                android:layout_below="@id/txt_satisfy_hint"
                android:layout_centerHorizontal="true"
                android:numStars="5"
                android:rating="1.5"
                android:stepSize="0.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rating_bar"
                android:layout_alignRight="@id/rating_bar"
                android:layout_below="@id/rating_bar"
                android:layout_marginTop="@dimen/normal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_level_1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/level_1" />

                <TextView
                    android:id="@+id/txt_level_2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/level_2" />

                <TextView
                    android:id="@+id/txt_level_3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/level_3" />

                <TextView
                    android:id="@+id/txt_level_4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/level_4" />

                <TextView
                    android:id="@+id/txt_level_5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/level_5" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>