<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="@dimen/login_margin_top">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_phone"
            android:maxLines="1"
            android:paddingLeft="40dip" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input_phone"
        android:layout_alignLeft="@id/input_phone"
        android:layout_marginBottom="15dip"
        android:src="@mipmap/icon_phone" />

    <View
        style="@style/divider_ver_gray_style"
        android:layout_height="20dip"
        android:layout_alignBottom="@id/img_phone"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@id/img_phone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_phone"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="@dimen/normal_margin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_pass"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="40dip" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/img_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input_pass"
        android:layout_alignLeft="@id/input_pass"
        android:layout_marginBottom="15dip"
        android:src="@mipmap/icon_pass" />

    <View
        style="@style/divider_ver_gray_style"
        android:layout_height="20dip"
        android:layout_alignBottom="@id/img_pass"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@id/img_pass" />

    <Button
        android:id="@+id/btn_login"
        style="@style/btn_theme"
        android:layout_below="@id/input_pass"
        android:layout_margin="30dip"
        android:text="@string/login" />

    <TextView
        android:id="@+id/txt_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_forget_pass"
        android:textColor="@color/theme_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_logins"
        android:layout_centerHorizontal="true"
        android:text="@string/hint_social_login_account" />

    <LinearLayout
        android:id="@+id/layout_logins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip">

        <ImageView
            android:id="@+id/img_wechat_login"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_wechat" />

        <ImageView
            android:id="@+id/img_qq_login"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_qq" />

        <ImageView
            android:id="@+id/img_sina_login"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_weibo" />
    </LinearLayout>

</RelativeLayout>