<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingRight="15dip"
                android:paddingTop="@dimen/normal_padding">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/header_image" />

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_avatar"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img"
                    app:riv_corner_radius="40dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right_normal" />
            </LinearLayout>

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/nickname" />

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="刘德华" />
            </LinearLayout>

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/txt_gender"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="男" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/area" />

                <TextView
                    android:id="@+id/txt_area"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="广东省" />
            </LinearLayout>

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/birthday" />

                <TextView
                    android:id="@+id/txt_birthday"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="1990-01-01" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_mid_item_style"
                android:layout_weight="1"
                android:width="0dip"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/txt_phone"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:text="12345678901" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/wechat" />

                <TextView
                    android:id="@+id/txt_wechat"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="wwwww" />
            </LinearLayout>

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/QQ" />

                <TextView
                    android:id="@+id/txt_qq"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="19900101" />
            </LinearLayout>

            <View style="@style/divider_offset_gray_style" />

            <LinearLayout
                android:id="@+id/layout_weibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_mid_item_style"
                    android:layout_weight="1"
                    android:width="0dip"
                    android:text="@string/weibo" />

                <TextView
                    android:id="@+id/txt_weibo"
                    style="@style/text_item_right_arrow_style"
                    android:layout_width="wrap_content"
                    android:text="weibo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>