                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="#ff5a60"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/account_status_unbind"
                />
        </LinearLayout>
        <View
