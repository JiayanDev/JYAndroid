<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dip">

        <LinearLayout
            android:id="@+id/layout_avatar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/personal_info_item_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_normal_color"
                android:text="头像"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avatar"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/normal_margin"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:riv_corner_radius="40dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/icon_arrow_right_normal"/>
        </LinearLayout>
        <View
            style="@style/divider_offset_gray_style"/>
        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/personal_info_item_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                android:text="昵称"
                />

            <TextView
                android:id="@+id/txt_name"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="@color/text_light_color"
                android:text="刘德华"/>
        </LinearLayout>

        <View style="@style/divider_offset_gray_style"/>

        <LinearLayout
            android:id="@+id/layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/personal_info_item_style"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_normal_color"
                android:text="性别"/>

            <TextView
                android:id="@+id/txt_gender"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="@color/text_light_color"
                android:text="男"
                />
        </LinearLayout>

        <View style="@style/divider_big_gray_style"/>

        <LinearLayout
            android:id="@+id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:onClick="onClick"
            style="@style/personal_info_item_style"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                android:text="地区"/>

            <TextView
                android:id="@+id/txt_location"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="@color/text_light_color"
                android:textSize="@dimen/normal_text_size"
                android:text="广东 深圳"
                />
        </LinearLayout>

        <View style="@style/divider_offset_gray_style"/>


        <LinearLayout
            android:id="@+id/layout_birthday"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            style="@style/personal_info_item_style"
            android:onClick="onClick">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                android:text="出生日期"/>

            <TextView
                android:id="@+id/txt_birthday"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="@color/text_light_color"
                android:textSize="@dimen/normal_text_size"
                android:text="1990-01-01"
                />
        </LinearLayout>

        <View style="@style/divider_offset_gray_style"/>

        <View style="@style/divider_big_gray_style"/>

