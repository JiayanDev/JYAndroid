                <!--/>-->
        <!--</LinearLayout>-->

        <View style="@style/divider_offset_gray_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            style="@style/personal_info_item_style"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                android:text="手机"/>

            <TextView
                android:id="@+id/txt_phone"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="@color/text_light_color"
                android:textSize="@dimen/normal_text_size"
                android:text="18681192051"
                />
        </LinearLayout>
        <View
            style="@style/divider_big_gray_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            style="@style/personal_info_item_style"
            android:onClick="onClick"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                android:text="微信"/>

            <TextView
                android:id="@+id/txt_wechat_username"
                style="@style/text_item_right_arrow_style"
                android:layout_width="wrap_content"
                android:textColor="#ff5a60"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/account_status_unbind"
                />
        </LinearLayout>
        <View
            style="@style/divider_offset_gray_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            style="@style/personal_info_item_style"
            android:onClick="onClick"
