<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avatar"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="17dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:riv_corner_radius="40dip"
                />

            <TextView
                android:id="@+id/txt_angel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="美丽天使"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                />

        </LinearLayout>

        <View
            style="@style/divider_offset_gray_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="17dp"
            android:paddingLeft="16dp"
            android:paddingTop="17dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:id="@+id/txt_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="全切开双眼皮"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/normal_text_size"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:id="@+id/txt_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="鹏爱医疗美容医院 李丽"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/normal_text_size"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textSize="@dimen/normal_text_size"/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="08.09 星期六 下午 14:00-16:00"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/normal_text_size"
                    />


            </LinearLayout>


        </LinearLayout>

        <View
            style="@style/divider_big_gray_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="昵称"
                android:textSize="@dimen/normal_text_size"/>

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:text="伴美小天使"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                />

        </LinearLayout>
        <View
            style="@style/divider_offset_gray_style"/>
        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机"
                android:textSize="@dimen/normal_text_size"/>

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:text="18681192051"
                android:layout_weight="1"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/normal_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换"
                android:textColor="@color/theme_color"
                android:layout_gravity="center"
                android:layout_marginRight="9dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_arrow_right_normal"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_company"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:background="@drawable/shape_bg_company_desc"
        android:layout_marginBottom="17dp"

        />
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/btn_theme"
        android:layout_marginBottom="17dp"
        android:text="@string/btn_confirm_applyment"
        />

</LinearLayout>