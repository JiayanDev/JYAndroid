<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:PagerSlidingTabStrip="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.jiayantech.jyandroid.widget.PagerSlidingTabStrip
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        PagerSlidingTabStrip:pstsShouldExpand="true"
        PagerSlidingTabStrip:pstsIndicatorColor="@color/theme_color"
        PagerSlidingTabStrip:pstsIndicatorHeight="5dp"
        >

    </com.jiayantech.jyandroid.widget.PagerSlidingTabStrip>
    <com.jiayantech.library.widget.UnslidableViewPager
        android:id="@+id/tab_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </com.jiayantech.library.widget.UnslidableViewPager>

</LinearLayout>