<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:padding="10dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:riv_corner_radius="2dip"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/avatar"
            android:text="liangzili"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_alignLeft="@id/username"
            android:layout_alignStart="@id/username"
            android:text="男   广东深圳    25岁"
            android:textColor="@color/text_light_color"
            android:textSize="@dimen/small_text_size"/>

        <ImageView
            android:id="@+id/ic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/avatar"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_post_type_diary"/>
    </RelativeLayout>

    <View
        style="@style/divider_gray_style"
        android:layout_marginTop="@dimen/normal_margin"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="大家好，我是周杰伦, 谢谢大家的捧场"/>

    <LinearLayout
        android:id="@+id/layout_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:id="@+id/photo"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/img"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/txt_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/normal_margin"
        android:drawableLeft="@drawable/ic_category"
        android:drawablePadding="@dimen/small_padding"
        android:gravity="center"
        android:textColor="@color/theme_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thumbs_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:drawablePadding="@dimen/small_padding"
            android:drawableRight="@drawable/thumbs_up"
            android:gravity="center"
            android:textColor="@color/text_light_color"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="5dp"
            android:drawablePadding="@dimen/small_padding"
            android:drawableRight="@drawable/reply"
            android:gravity="center"
            android:textColor="@color/text_light_color"/>

    </LinearLayout>
</LinearLayout>
