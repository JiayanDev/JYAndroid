<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="94dp"
              android:orientation="horizontal"
              android:paddingTop="17dp"
              android:paddingBottom="17dp"
              android:paddingLeft="@dimen/normal_margin"
              android:paddingRight="@dimen/normal_margin"
    >

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="让眼睛更有魅力"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_normal_color"
            />
        <TextView
            android:id="@+id/txt_project"
            android:layout_width="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="韩国进口水光针美容"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_light_color"
            android:textSize="@dimen/smallest_text_size"
            />
        <TextView
            android:id="@+id/txt_time"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_clear"
            android:drawablePadding="10dp"
            android:textSize="@dimen/smallest_text_size"
            android:textColor="@color/text_light_color"
            android:text="2015.10.28"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已报名 待审核"
        android:layout_gravity="center"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/normal_text_size"
        />
    <TextView
        android:id="@+id/txt_status_comment"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="评价"
        android:gravity="center"
        android:background="@drawable/shape_frame"
        android:paddingTop="5dp"
        android:textColor="@color/theme_color"
        android:paddingBottom="5dp"
        android:visibility="gone"
        />

</LinearLayout>