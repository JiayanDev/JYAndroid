<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:padding="@dimen/normal_margin"
        android:src="@mipmap/icon_x" />

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_below="@id/img_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:src="@mipmap/icon_logo" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/img_app"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_margin="20dip"-->
    <!--android:text="@string/app_name" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip">

        <RelativeLayout
            android:id="@+id/btn_wechat_login"
            style="@style/btn_theme"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="@string/wechat_login"
            android:minWidth="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@mipmap/icon_wechat_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/wechat_login"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_other_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_wechat_login"
            android:text="@string/other_login" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_wechat_login"
            android:text="@string/register" />
    </RelativeLayout>

</RelativeLayout>
