<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_sina_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_sina_login" />

    <Button
        android:id="@+id/btn_sina_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_sina_logout" />

    <Button
        android:id="@+id/btn_qq_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_qq_login" />

    <Button
        android:id="@+id/btn_qq_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_qq_logout" />

    <Button
        android:id="@+id/btn_wechat_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_wechat_login" />

    <Button
        android:id="@+id/btn_wechat_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_wechat_logout" />


</LinearLayout>