<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:padding="@dimen/normal_margin"
        android:src="@mipmap/icon_x" />

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_below="@id/img_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:src="@mipmap/icon_logo" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/img_app"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_margin="20dip"-->
    <!--android:text="@string/app_name" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip">

        <Button
            android:id="@+id/btn_wechat_login"
            style="@style/btn_theme"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="@string/wechat_login" />

        <TextView
            android:id="@+id/txt_other_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btn_wechat_login"
            android:layout_marginLeft="@dimen/normal_margin"
            android:text="@string/other_login" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_wechat_login"
            android:layout_marginRight="@dimen/normal_margin"
            android:text="@string/register" />
    </RelativeLayout>

</RelativeLayout>
