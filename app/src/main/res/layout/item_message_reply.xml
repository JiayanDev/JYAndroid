<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        app:riv_corner_radius="20dp"/>

    <RelativeLayout
        android:id="@+id/layout_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_toLeftOf="@id/txt_date"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大王Vivian"
            android:maxEms="6"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/theme_color"
            />
        <ImageView
            android:id="@+id/img_tag"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt_username"
            android:src="@mipmap/tag_angel"/>
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_tag"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="回复了我的日志"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08-25"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="怎么做？"
        android:maxLines="3"
        android:minLines="1"
        android:ellipsize="end"
        android:layout_below="@id/layout_identity"
        android:layout_alignLeft="@id/layout_identity"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txt_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全开双眼皮经验分享"
        android:maxLines="3"
        android:minLines="1"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_bg_company_desc"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_content"
        android:layout_alignLeft="@id/txt_content"/>
</RelativeLayout>