<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img"
        app:riv_corner_radius="20dp"/>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大王Vivian"
        android:textColor="@color/theme_color"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_username"
        android:layout_marginLeft="10dp"
        android:text="回复了我的日志"/>
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08-25"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="怎么做？"
        android:layout_below="@id/txt_username"
        android:layout_alignLeft="@id/txt_username"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txt_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全开双眼皮经验分享"
        android:background="@color/bg_light_gray_color"
        android:layout_below="@id/txt_content"
        android:layout_alignLeft="@id/txt_content"/>
</RelativeLayout>