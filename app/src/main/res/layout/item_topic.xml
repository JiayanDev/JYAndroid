<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@android:color/black"
                android:padding="5dip"
                android:src="@drawable/ic_account_box_black_48dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:layout_alignTop="@id/avatar"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/avatar"
                android:text="liangzili" />

            <TextView
                android:id="@+id/info"
                android:layout_alignBottom="@id/avatar"
                android:layout_alignLeft="@id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男   广东深圳    25岁"
                />

            <ImageView
                android:id="@+id/ic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_post_type_diary"
                android:layout_alignTop="@id/avatar"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/divider_gray_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大家好，我是周杰伦, 谢谢大家的捧场" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_reply"
                android:src="@drawable/reply"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/comment"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@id/ic_reply"
                android:gravity="center"
                android:text="15" />
            <ImageView
                android:id="@+id/ic_thumbs_up"
                android:src="@drawable/thumbs_up"
                android:layout_toLeftOf="@id/comment"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/thumbs_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@id/ic_thumbs_up"
                android:gravity="center"
                android:text="15" />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>