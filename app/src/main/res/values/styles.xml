<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- 状态栏颜色 -->
        <!--<item name="colorPrimaryDark">@android:color/transparent</item>-->
        <!-- toolbar（actionbar）文本颜色-->
        <item name="android:textColorPrimary">@color/theme_color</item>
        <item name="colorControlNormal">@color/theme_color</item>
        <item name="actionMenuTextColor">@color/theme_color</item>
        <item name="android:windowAnimationStyle">@style/activitySlideAnimation</item>
        <item name="android:homeAsUpIndicator">@mipmap/up_indicator</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarTitle</item>
        <item name="android:actionMenuTextColor">@color/theme_color</item>
    </style>

    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!--普通文本-->
    <!--<style name="PrimaryText">-->
    <!--<item name="android:textColor">@color/primary_text</item>-->
    <!--</style>-->

    <style name="main_tab">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/txt_color_gray_theme_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="txt_setting_info_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
