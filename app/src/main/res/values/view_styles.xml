<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="btn_black_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">35dip</item>
        <item name="android:layout_marginRight">35dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/btn_black_selector</item>
    </style>

    <style name="txt_driving_life_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/font_blue</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <style name="txt_trip_track_title_white_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txt_trip_track_content_blue_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_blue</item>
    </style>

    <style name="text_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_normal_color</item>
    </style>

    <style name="text_mid_item_style" parent="text_item_style">
        <item name="android:padding">15dip</item>
    </style>

    <style name="text_item_right_arrow_style" parent="text_mid_item_style">
        <item name="android:drawableRight">@drawable/img_right_arrow_selector</item>
        <!--<item name="android:drawablePadding">5dip</item>-->
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="text_hint_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_light_color</item>
    </style>

    <style name="text_item_hint_style" parent="text_hint_style">
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="text_item_content_style" parent="text_item_right_arrow_style">
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <style name="edit_item_style" parent="text_item_style">
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="divider_gray_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>

    <style name="divider_gray_style_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>

    <style name="divider_big_gray_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_margin</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>

    <style name="divider_offset_gray_style" parent="divider_gray_style">
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
    </style>

    <style name="divider_ver_gray_style">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>

    <style name="btn_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_round_theme</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_bottom_menu_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_title_selector</item>
    </style>

    <!--EditTextçš„style-->
    <style name="edit_text_style">
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
